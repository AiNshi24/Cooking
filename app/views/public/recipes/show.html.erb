<main>
  <div class="container">
    <div class="flash_message">
    <%= flash[:notice] %>
    </div>
    <div class="title">
      <h2><%= @recipe.title %></h2>
      <div class="cooking-title font-weight-bold">関連タグ</div>
        <% if @recipe.tags.empty? %>
          <p class="tag_none">関連タグが設定されていません</p>
        <% else %>
          <% @recipe.tags.each do |tag| %>
            <%= tag.name %>
          <% end %>
        <% end %>
    </div>
    <div class="row">
      <div class="recipe_img col-6">
        <%= link_to user_path(@recipe.user.id) do %>
        <%= image_tag @recipe.user.get_profile_image(50,50) %>
        <%= @recipe.user.name %>
        <% end %>
        <% if @recipe.user == current_user %>
          <%= link_to "レシピ編集", edit_recipe_path(@recipe.id), class:"recipe_edit_btn btn btn-sm btn-outline-warning" %>
        <% end %>
        <%= @recipe.image %>
      </div>
      <div class="col-6">
        <div class="cooking-title font-weight-bold">材料</div>
          <% @recipe.ingredients.each do |ingredient| %>
            <div class="ingredients">
              <div><%= ingredient.content %></div>
              <div><%= ingredient.quantity %></div>
            </div>
          <% end %>
      </div>
    </div>
    <div>
      <div class="cooking-title font-weight-bold">作り方</div>
      <% @recipe.procedures.each do |procedure| %>
      <div class="d-flex"><%= procedure.id %></div>
      <div class="d-flex"><%= procedure.description %></div>
      <% end %>
    </div>
    <div>
      <p>コメント件数：<%= @recipe.comments.count %></p>
      <% @recipe.comments.each do |comment| %>
        <p><%= image_tag comment.user.get_profile_image(50,50) %></p>
        <%= comment.user.name %>
        <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
      <% end %>
    </div>
    <div>
      <%= form_with model: [@recipe, @comment] do |f| %>
        <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
        <%= f.submit "送信する" %>
      <% end %>
    </div>
  </div>
</main>