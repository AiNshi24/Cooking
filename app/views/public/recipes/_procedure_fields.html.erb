<div class="nested-fields">
  <%= f.hidden_field :_destroy %>
  <div class="procedures d-flex">
    <p class="procedure_number"></p>
    <%= f.text_area :description, class:"procedure_input mb-2 mr-2"%>
    <div class="delete d-flex">
      <%= link_to_remove_association f, class:"btn" do %>
      <i class="far fa-trash-alt"></i>
      <% end %>
    </div>
  </div>
</div>
