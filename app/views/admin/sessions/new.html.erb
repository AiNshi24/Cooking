<main>
  <div class="container">
    <div class="flash_message">
    <%= flash[:notice] %>
    </div>
    <div class="title">
      <h2>管理者ログイン</h2>
    </div>
    <div class="row">
      <div class="mx-auto mt-5">
        <%= form_with model: @admin, url: admin_session_path do |f| %>
          <div class="field login">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"login_field" %>
          </div>
        
          <div class="field login mt-2">
            <%= f.label :password, "パスワード" %>
            <%= f.password_field :password, autocomplete: "current-password", class:"login_field" %>
          </div>
        
          <div class="actions">
            <%= f.submit "ログイン", class:"btn btn-warning d-block login_btn mt-5" %>
          </div>
        <% end %>
      </div>
    </div>
        <%= render "admin/shared/links" %>
  </div>
</main>